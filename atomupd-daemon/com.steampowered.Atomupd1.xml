<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
  <!--
      com.steampowered.Atomupd1:
      @short_description: Interface to control an atomic update
  -->
  <interface name='com.steampowered.Atomupd1'>

    <property name="Version" type="u" access="read"/>

    <property name="IsUpdateInProgress" type="b" access="read"/>

    <method name="IsUpdateAvailable">
      <arg type='s' name='Branch' direction='in'/>
      <arg type='b' name='Available' direction='out'/>
      <arg type='s' name='Version' direction='out'/>
      <arg type='s' name='Changelog' direction='out'/>
    </method>

    <method name="EstimateUpdateSize">
      <arg type='t' name='UpdateSize' direction='out'/>
    </method>

    <method name="PauseUpdate">
    </method>

    <method name="ResumeUpdate">
    </method>

    <method name="StartPreparingUpdate">
    </method>

    <method name="StartUpdate">
    </method>

    <signal name="PreparationProgress">
      <arg type='b' name='Completed'/>
      <arg type='u' name='ProgressPercentage'/>
    </signal>

    <signal name="UpdateProgress">
      <arg type='b' name='Completed'/>
      <arg type='u' name='ProgressPercentage'/>
    </signal>

  </interface>

</node>
